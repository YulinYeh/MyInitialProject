doctype html
html(lang="zh-Hant")
  head
    meta(charset="utf-8")
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    block head
    meta(name="keywords", content="")
    meta(name="description", content="")
    meta(name="author", content="")
    meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no, minimal-ui")
    link(rel="author", type="text/plain", href="humans.txt")
    //- https://mathiasbynens.be/notes/touch-icons
    //- IE6-10
    link(rel="shortcut icon", href="favicon.ico")
    //- Everybody else
    link(rel="icon", href="favicon.ico")
    link(rel="icon", sizes="16x16", href="assets/images/icon/favicon-16.png")
    link(rel="icon", sizes="32x32", href="assets/images/icon/favicon-32.png")
    link(rel="icon", sizes="48x48", href="assets/images/icon/favicon-48.png")
    link(rel="icon", sizes="64x64", href="assets/images/icon/favicon-64.png")
    link(rel="icon", sizes="128x128", href="assets/images/icon/favicon-128.png")
